{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "eslint-config-prettier"
  ],
  "plugins": [
    "eslint-plugin-prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
        "endOfLine": "auto",
        "semi": true,
        "printWidth": 100
      }
    ],
    "quotes": [
      2,
      "double",
      {
        "avoidEscape": false
      }
    ],
    "no-unused-vars": 0,
    "no-param-reassign": 0,
    "no-shadow": 0,
    "class-methods-use-this": 0,
    "no-plusplus": 0,
    "no-use-before-define": 0,
    "arrow-body-style": 0,
    "operator-linebreak": 0,
    "dot-notation": 0,
    "consistent-return": 0,
    "max-len": [1, { "code": 100 }],
    "no-underscore-dangle": 0,
    "camelcase": 0
  }
}
